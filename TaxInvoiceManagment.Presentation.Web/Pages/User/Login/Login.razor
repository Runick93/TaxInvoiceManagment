@namespace TaxInvoiceManagment.Presentation.Web.Pages.User
@layout UserLayout
@page "/user/login"

<div class="main__b__0">
    <div class="login">
        <h3>Login</h3>
        <Form Model="@_model" OnFinish="HandleSubmit">
            <FormItem>
                <AntDesign.Input Placeholder="Username: admin or user" Size="@InputSize.Large" @bind-Value="@context.UserName">
                    <Prefix><Icon Type="user" /></Prefix>
                </AntDesign.Input>
            </FormItem>
            <FormItem>
                <AntDesign.Input Placeholder="Password: ant.design" Size="@InputSize.Large" @bind-Value="@context.Password" Type="@InputType.Password">
                    <Prefix><Icon Type="lock" /></Prefix>
                </AntDesign.Input>
             </FormItem>
            
            <div>
                <Checkbox Checked="@context.AutoLogin">
                    Auto Login
                </Checkbox>
                <a style="float: right;">
                    Forgot Password
                </a>
            </div>
            <Button Type="@ButtonType.Primary" HtmlType="submit" Class="submit" Size="@ButtonSize.Large" Block>Log in </Button>
            <div class="other">
                <a class="register" href="/user/register">Register Account</a>
            </div>
        </Form>
    </div>
</div>